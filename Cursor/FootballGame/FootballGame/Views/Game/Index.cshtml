@{
    ViewData["Title"] = "Football Game";
}

<div class="text-center">
    <div class="d-flex justify-content-start mb-3">
        <button id="settingsButton" class="btn btn-secondary">
            <i class="bi bi-gear"></i> Seçenekler
        </button>
    </div>
    <h1 class="display-4">Football Game</h1>
    <div class="wheel-container mt-4">
        <canvas id="wheelCanvas" width="400" height="400"></canvas>
        <div class="mt-3">
            <button id="spinButton" class="btn btn-primary">Çevir</button>
        </div>
    </div>
</div>

<!-- Lig Seçim Modal -->
<div class="modal fade" id="leagueModal" tabindex="-1" aria-labelledby="leagueModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="leagueModalLabel">Lig Seçimi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <select id="leagueSelect" class="form-select">
                    <option value="">Lig Seçiniz</option>
                    <option value="premier-league">Premier League (İngiltere)</option>
                    <option value="la-liga">La Liga (İspanya)</option>
                    <option value="bundesliga">Bundesliga (Almanya)</option>
                    <option value="serie-a">Serie A (İtalya)</option>
                    <option value="ligue-1">Ligue 1 (Fransa)</option>
                    <option value="super-lig">Süper Lig (Türkiye)</option>
                    <option value="eredivisie">Eredivisie (Hollanda)</option>
                    <option value="primeira-liga">Primeira Liga (Portekiz)</option>
                    <option value="belgian-pro-league">Belgian Pro League (Belçika)</option>
                    <option value="brasileirao">Brasileirão (Brezilya)</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="confirmLeague">Tamam</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}

@section Scripts {
    <script src="~/js/script.js"></script>
}
